<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.remind.viewmodel.CreateJournalViewModel" />

        <variable
            name="audioViewModel"
            type="com.example.remind.viewmodel.AudioRecorderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/back_button_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/add_image_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> viewModel.onAddImageClick()}"
            android:contentDescription="@string/add_image_button_desc" />

        <ImageView
            android:id="@+id/toggleRecordingButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/microphone"
            app:layout_constraintEnd_toStartOf="@id/add_image_button"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> audioViewModel.toggleRecording()}"
            android:contentDescription="@string/toggle_recording_button_desc" />

        <EditText
            android:id="@+id/journal_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textStyle="bold"
            android:text="@={viewModel.title}"
            android:background="@null"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_primary"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/journal_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:text="@={viewModel.content}"
            android:background="@null"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/journal_title"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_recycler_view"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/journal_content" />

        <ImageView
            android:id="@+id/save_button"
            android:src="@drawable/save_tele"
            android:backgroundTint="@color/purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="100dp"
            android:onClick="@{() -> viewModel.saveJournal()}"
            android:contentDescription="@string/save_button_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>