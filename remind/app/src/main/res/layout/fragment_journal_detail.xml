<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.remind.viewmodel.JournalDetailViewModel" />
        <variable
            name="journal"
            type="com.example.remind.model.Journal" />
    </data>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/journal_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/journal_back"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/journal_images_recyclerview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/journal_back"
                app:imageList="@{journal.images}" />

            <ImageView
                android:id="@+id/journal_item_status"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="3dp"
                app:statusImage='@{journal.status}'
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/journal_images_recyclerview"
                />

            <TextView
                android:id="@+id/journal_item_updated_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:formattedDate='@{journal.updatedAt}'
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="@id/journal_item_status"
                app:layout_constraintTop_toBottomOf="@id/journal_images_recyclerview" />

            <TextView
                android:id="@+id/journal_item_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{journal.content}'
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/journal_item_cate_name"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/journal_item_cate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{journal.title}'
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                app:layout_constraintStart_toEndOf="@id/journal_item_status"
                app:layout_constraintTop_toBottomOf="@id/journal_item_status"
                app:layout_constraintEnd_toEndOf="parent" />


            <Button
                android:id="@+id/journal_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/purple"
                android:text="Detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/journal_item_updated_at"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
